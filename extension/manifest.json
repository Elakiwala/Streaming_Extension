{
    "manifest_version": 3,
    "name": "Sync Party", 
    "version": "1.0", 
    "description": "Chat vocal et texte sur tous les sites de streaming", 
    "permissions": ["scripting", "tabs"],
    "action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": ["style.css"],
            "matches": ["<all_urls>"]
        }
    ]
}